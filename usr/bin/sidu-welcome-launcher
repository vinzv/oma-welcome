#!/bin/sh
if ! [ -e "/home/$USER/.oma-welcome" ]; then
	touch ~/.oma-welcome
	echo 'autostart=1' > ~/.oma-welcome
fi

source ~/.oma-welcome

#read if autostart?
if [ "$autostart" -eq 1 ]; then
	cd /usr/share/oma-welcome/
	exec htmlscript -s 870x520 -i /usr/share/icons/openmandriva.svg -t "OM Welcome" index.sh.htm
fi
