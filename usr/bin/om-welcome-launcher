#!/bin/bash

if [ -e "/home/$USER/.oma-welcome" ]; then
	clear;
else
	touch ~/.oma-welcome;
	echo 'autostart=1' > ~/.oma-welcome;
fi

source ~/.oma-welcome

#read if autostart?
if [ $autostart -eq 1 ]; then

	cd /usr/share/oma-welcome/;
	python bigbashview.py -s 870x480 -c index.sh.htm 2> /dev/null;
		
fi
